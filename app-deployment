apiVersion: apps/v1
kind: Deployment
metadata:
  name: snapdeal-app
  namespace: snapdeal
  labels:
    app: snapdeal-app
spec:
  replicas: 4
  strategy:
    type: RollingUpdate
    rollingUpdate:
      maxSurge: 1
      maxUnavailable: 1
  selector:
    matchLabels:
      app: snapdeal-app
  template:
    metadata:
      labels:
        app: snapdeal-app
    spec:
      imagePullSecrets:
        - name: ecr-secret
      containers:
        - name: snapdeal-app
          image: 
          imagePullPolicy: Always
          ports:
            - name: http
              containerPort: 80
              protocol: TCP

          env:
           #Secret info 
            
          resources:
            requests:
              cpu: "250m"
              memory: "512Mi"
            limits:
              cpu: "500m"
              memory: "1Gi"

          readinessProbe:
            httpGet:
              path: /
              port: 80
            initialDelaySeconds: 30
            periodSeconds: 10
            timeoutSeconds: 5
            failureThreshold: 3

          livenessProbe:
            httpGet:
              path: /
              port: 80
            initialDelaySeconds: 60
            periodSeconds: 20
            timeoutSeconds: 5
            failureThreshold: 3

          securityContext:
            runAsUser: 0
            runAsNonRoot: false

     
      restartPolicy: Always
      terminationGracePeriodSeconds: 30

---
apiVersion: v1
kind: Service
metadata:
  name: snapdeal-app-service
  namespace: snapdeal
  labels:
    app: snapdeal-app
spec:
  type: NodePort
  ports:
    - port: 80
      targetPort: 80
      protocol: TCP
      name: http
  selector:
    app: snapdeal-app

---
apiVersion: autoscaling/v2
kind: HorizontalPodAutoscaler
metadata:
  name: snapdeal-app-hpa
  namespace: snapdeal
spec:
  scaleTargetRef:
    apiVersion: apps/v1
    kind: Deployment
    name: snapdeal-app
  minReplicas: 4
  maxReplicas: 10
  metrics:
    - type: Resource
      resource:
        name: cpu
        target:
          type: Utilization
          averageUtilization: 70
    - type: Resource
      resource:
        name: memory
        target:
          type: Utilization
          averageUtilization: 80
